extends index
block content
  h1 Welcome to the Library
  table
    thead
      tr
        th
        th Title
        th Description
        th Authors
        th Genres
    tbody
      for book in books
        tr
          td
            img(src=`${book.image_url}`)
          td= book.title
          td= book.description
          for author in book.authors
            td= author.name
          for genre in book.genres
            td= genre.name

    br
    if page > 1
      a(href='/?page='+(page-1)) Previous
    br
    if !lastPageFlag
      a(href='/?page='+(page+1)) Next 
