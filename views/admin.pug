extends index
block content
  h1 Admin
  a.btn.btn-success.btn-lg.col-md-4(href="/admin/add") Add
  form.navbar-form.col-md-8(method="get" action="/admin")
    input.form-control(type="text" placeholder="Search Books..." name="options")
    button.btn.glyphicon.glyphicon-search(type="submit" value="Search")
  .clearfix
  +previousNext
  +booklist(true)
  +previousNext


mixin previousNext
  .clearfix
    if page > 1
      a.pull-left.btn.btn-info(href='/admin?options='+options +'&page='+(page-1))
        .glyphicon.glyphicon-chevron-left
        |Previous
    if !lastPageFlag && books.length >= 10
      a.pull-right.btn.btn-info(href='/admin?options='+options +'&page='+(page+1)) Next
        .glyphicon.glyphicon-chevron-right
  .clearfix
